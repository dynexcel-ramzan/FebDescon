<odoo>
  <data>
           <!--Display form view of wizard-->    
        <record id="view_hr_payment_detail_form" model="ir.ui.view">
            <field name="name">hr.payment.detail.wizard.form</field>
            <field name="model">payment.detail.wizard</field>
            <field name="arch" type="xml">
                <form string="Payment Detail Report:">
                    <group>
                        
                       <group>
                            <field name="date_from" />
                      </group>
                        
                      <group>
                        <field name="date_to"/>
                      </group>                        
                        
                    </group>
                    
                    <footer>
                        <button string='Print' name="check_report" type="object" default_focus="1" class="oe_highlight"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <!--Open the wizard on click of menu-->
        <record id="open_payment_detail_wizard_action" model="ir.actions.act_window">
            <field name="name">Payment Detail Report</field>
            <field name="res_model">payment.detail.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="view_id" ref="view_hr_payment_detail_form"/>
        </record>
      <menuitem action="open_payment_detail_wizard_action" id="payment_detail_report" name="Payemnt Detail Report" parent="account.menu_finance_reports" sequence="1"/>
      
      
  </data>
</odoo>